---
import { ProjectsContainer } from './react/ProjectsContainer';

interface Props {
  projects: {
    initialText: string
    title: string
    container: any[],
    btnMore: string
    btnLess: string
  }
} 

const { projects } = Astro.props;

const { initialText, title, container, btnMore, btnLess } = projects;
---


<section id="projects">
  <p class="section-text-paragraph">{initialText}</p>
  <h1 class="section-title">{title}</h1>

  <ProjectsContainer client:load allProjects={container} textBtnMoreProjects={btnMore} textBtnLessProjects={btnLess} />

</section>

<style>
  #projects {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    height: fit-content;
    padding-top: 100px;
		padding-bottom: 100px;
  }
</style>