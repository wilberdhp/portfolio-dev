---
interface Props {
  hero: {
    image?: string,
    subtitle: string
    resumen: string
    curriculum: string
  }
}

const { hero } = Astro.props;

const { image, subtitle, resumen, curriculum } = hero;

---


<section id="hero">
  <div class="container-img">
    <img src={ image || "./images/hero-image.webp"} alt="Wilber Hernández" />
  </div>

  <div class="contenedor">
    <h1>Wilber <br /> Hernández</h1>
    <h2>{subtitle}</h2>
    <div class="socials-container">
      <a aria-labelledby="linkedin" class="icon" href="https://www.linkedin.com/in/wilberdhp" target="_blank" rel="noopener noreferrer"><i aria-label="linkedin" class="bi bi-linkedin"></i></a>
      <a aria-labelledby="github" class="icon" href="https://github.com/wilberdhp" target="_blank" rel="noopener noreferrer"><i aria-label="github" class="bi bi-github"></i></a>
    </div>
    <p class="description">{resumen}</p>

    <a class="btn btn-curriculum" href={curriculum} target="_blank" rel="noopener noreferrer" >
      Curriculum Vitae
    </a>
  </div>
</section>

<style>
  #hero {
    display: flex;
    flex-direction: row-reverse;
    flex-wrap: wrap;
    justify-content: space-evenly;
    align-items: center;
    min-height: 100vh;
    gap: 20px;
    max-width: 90%;
    margin: 0 auto;
    padding-top: 100px;
		padding-bottom: 100px;
  }

  .container-img img {
    width: 400px;
    height: 400px;
    border-radius: 100vmax;
  }

  .contenedor {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 15px;
  }

  h1 {
    font-family: "Rubik", sans-serif;
    font-size: 40px;
    color: var(--text-color)
  }

  h1, h2 {
    text-transform: uppercase;
    font-weight: bold;
  }

  h2 {
    font-size: 24px;
    color: var(--text-color)
  }

  h2, p {
    font-family: "Roboto Mono", monospace;
  }

  .description {
    font-size: 20px;
    max-width: 24ch;
  }


  .socials-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
  }

  .icon {
    font-size: 45px;
  }

  .btn {
    cursor: pointer;
    background-color: var(--btn-hero-more-project-background);
    color: var(--btn-hero-more-project-color);
    border: none;
    border-radius: 100vmax;
    width: fit-content;
    height: fit-content;
    padding: 15px;
    font-size: 18px;
    font-weight: bold;
    box-shadow: var(--btn-hero-more-project-box-shadow);
    transition:
      box-shadow 200ms ease-in-out,
      transform 200ms ease-in-out;
  }

  .btn:hover {
    animation: none;
  }

  .btn:active {
    transform: translateY(2px);
    -webkit-transform: translateY(2px);
    -moz-transform: translateY(2px);
    -ms-transform: translateY(2px);
    -o-transform: translateY(2px);
    box-shadow: 0 2px 2px rgba(0, 0, 0, 0.25);
  }

  .btn {
    animation: btn-curriculum-animation 1.5s ease-in-out infinite;
  }

  @keyframes btn-curriculum-animation {
    from {
      transform: scale(1);
    }

    50% {
      transform: scale(1.05);
    }

    to {
      transform: scale(1);
    }
  }


  /* Media Query */

  @media screen and (width <= 1000px) {
    .container-img img {
      width: 350px;
      height: 350px;
    }
  }

  @media screen and (width <= 720px) {
    .container-img img {
      width: 330px;
      height: 330px;
    }
  }

  @media screen and (width <= 420px) {
    .container-img img {
      width: 280px;
      height: 280px;
    }
  }

</style>
